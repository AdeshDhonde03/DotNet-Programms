@model poultry_management_system.web.Models.ViewModels.EditEntry;

<h2>Edit Daily Entry</h2>

<form asp-action="Edit" method="post">
    <!-- Hidden field to pass the ID -->
    <input type="hidden" asp-for="Id" />

    <!-- Age -->
    <div class="form-group">
        <label asp-for="Age" class="form-label">Age (Days)</label>
        <input asp-for="Age" class="form-control" type="number" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <!-- Opening Birds -->
    <div class="form-group">
        <label asp-for="Opening_Birds" class="form-label">Opening Birds</label>
        <input asp-for="Opening_Birds" class="form-control" type="number" id="Opening_Birds"  />
        <span asp-validation-for="Opening_Birds" class="text-danger"></span>
    </div>

    <!-- Mortality -->
    <div class="form-group">
        <label asp-for="Mortallity" class="form-label">Mortality</label>
        <input asp-for="Mortallity" class="form-control" type="number" id="Mortallity"  />
        <span asp-validation-for="Mortallity" class="text-danger"></span>
    </div>

    <!-- Closing Birds (Read-Only) -->
    <div class="form-group">
        <label asp-for="Closing_Birds" class="form-label">Closing Birds</label>
        <input asp-for="Closing_Birds" class="form-control" type="number" id="Closing_Birds" />
        <span asp-validation-for="Closing_Birds" class="text-danger"></span>
    </div>

    <!-- Feed Consumed -->
    <div class="form-group">
        <label asp-for="Feed_Consume" class="form-label">Feed Consumed (Kg)</label>
        <input asp-for="Feed_Consume" class="form-control" type="number" step="0.10" />
        <span asp-validation-for="Feed_Consume" class="text-danger"></span>
    </div>

    <!-- Average Weight -->
    <div class="form-group">
        <label asp-for="Avg_Weight" class="form-label">Average Weight (Kg)</label>
        <input asp-for="Avg_Weight" class="form-control" type="number" step="0.10" />
        <span asp-validation-for="Avg_Weight" class="text-danger"></span>
    </div>

    <!-- Daily Eggs Production -->
    <div class="form-group">
        <label asp-for="Daily_Eggs_Production" class="form-label">Daily Eggs Production</label>
        <input asp-for="Daily_Eggs_Production" class="form-control" type="number" />
        <span asp-validation-for="Daily_Eggs_Production" class="text-danger"></span>
    </div>

    <!-- Health Status -->
    <div class="form-group">
        <label asp-for="Health_Status" class="form-label">Health Status</label>
        <textarea asp-for="Health_Status" class="form-control"></textarea>
        <span asp-validation-for="Health_Status" class="text-danger"></span>
    </div>

    <!-- Instruction -->
    <div class="form-group">
        <label asp-for="Instruction" class="form-label">Instruction</label>
        <textarea asp-for="Instruction" class="form-control"></textarea>
        <span asp-validation-for="Instruction" class="text-danger"></span>
    </div>

    <!-- Submit Buttons -->
    <div>
        <form asp-controller="DailyEntry" asp-action="Edit" method="post">
            <input type="hidden" name="Id" value="@Model.Id" />
            <!-- Other input fields here -->
            <button type="submit">Update</button>
        </form>

       

    </div>
</form>



