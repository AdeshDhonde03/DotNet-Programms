@model poultry_management_system.web.Models.ViewModels.AddDailyEntry;
<!DOCTYPE html>
<html lang="en">
<head>
    
    </div>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Daily Entry Form</title>
             <!-- Link to the CSS file -->
</head>
<body>
    <h1>Daily Poultry Entry</h1>
    <div class="form-container">
        <form  method="post">
            
            
            <div class="form-group">
                <label for="age"> Age (Days)</label>
                <input type="number" id="age" placeholder="Enter age in dayss" asp-for="Age"  required>
            </div
            <div>
            <label for="Opening_Birds"> Opening Birds:</label>
            <input type="number" id="Opening_Birds" placeholder="Enter total birds "  asp-for="Opening_Birds"/>
             </div>
            <div class="form-group">
                <label for="mortality"> Mortality</label>
            <input type="number" id="mortality" placeholder="Enter number of deaths" asp-for="Mortallity" />
            </div>
              
            <div class="form-group">
                <label for="feedConsumed"> Feed Consumed (kg)</label>
                <input type="number" id="feedConsumed"  placeholder="Enter feed consumed in kg" step="0.01"asp-for="Feed_Consume" required>
            </div>
            <div class="form-group">
                <label for="averageWeight"> Average Weight (kg)</label>
                <input type="number" id="averageWeight" placeholder="Enter average weight in kg" step="0.01"asp-for="Avg_Weight" required>
            </div>
            <div class="form-group">
                <label for="dailyEggProduction"> Daily Egg Production</label>
                <input type="number" id="dailyEggProduction"  placeholder="Enter number of eggs produced"asp-for="Daily_Eggs_Production" required>
            </div>
            <div class="form-group">
                <label asp-for="Health_Status"> Health Status</label>
                <select id="healthStatus" asp-for="Health_Status" required>
                    <option value="">Select health status</option>
                    <option value="Good">Good</option>
                    <option value="Fair">Fair</option>
                    <option value="Poor">Poor</option>
                </select>
            </div>
            <div class="form-group">
                <label for="Instruction"> Daily Instruction</label>
                <input id="Instruction" name="instruction" placeholder="Enter Daily Instruction"asp-area="Instruction" required>
            </div>
            <button type="submit" >Submit</button>
            <p class="text-center mt-3">Show All Records <a asp-area="" asp-controller="DailyEntry" asp-action="List">Show Records</a></p>
        </form>
       
       
    </div>
</body>
</html>
